# ============================================================================
# docker-compose.env - Variabili d'ambiente Docker Compose
# ============================================================================
# ATTENZIONE: Questo file contiene credenziali sensibili
# MAI committare questo file nel repository!

# ============================================================================
# DATABASE CREDENTIALS
# ============================================================================
POSTGRES_DB=myplanner
POSTGRES_USER=myplanner
POSTGRES_PASSWORD=devpass

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================
# SECRET_KEY per JWT (almeno 32 caratteri)
SECRET_KEY=myplanner-secret-key-change-in-production-min-32-chars-2025

# Database URL per il backend
DATABASE_URL=postgresql://myplanner:devpass@db:5432/myplanner

# Porte esposte
DB_PORT=5432
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
VITE_API_URL=http://localhost:8000

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
ENVIRONMENT=development
ACCESS_TOKEN_EXPIRE_MINUTES=30




